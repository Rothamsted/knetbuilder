<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
   <modelVersion>4.0.0</modelVersion>

   <parent>
      <artifactId>ovtk2-modules</artifactId>
      <groupId>net.sourceforge.ondex.apps</groupId>
      <version>5.0</version>
   </parent>

   <groupId>net.sourceforge.ondex.apps</groupId>
   <artifactId>ovtk2-poplar</artifactId>
   <packaging>jar</packaging>

   <name>ovtk2-poplar</name>
   <description>Poplar specific plugins for OVTK2.</description>

   <dependencies>
      <dependency>
         <groupId>net.sourceforge.ondex.apps</groupId>
         <artifactId>ovtk2</artifactId>
         <version>${project.version}</version>
         <scope>provided</scope>
      </dependency>
      <dependency>
         <groupId>net.sourceforge.ondex.apps</groupId>
         <artifactId>ovtk2-default</artifactId>
         <version>${project.version}</version>
         <scope>provided</scope>
      </dependency>
   </dependencies>
   <build>
      <plugins>
         <plugin>
            <artifactId>maven-assembly-plugin</artifactId>
            <configuration>
               <descriptors>
                  <descriptor>distribution.xml</descriptor>
               </descriptors>
            </configuration>
            <executions>
               <execution>
                  <id>make-assembly</id>
                  <!-- this is used for inheritance merges -->
                  <phase>package</phase>
                  <!-- append to the packaging phase. -->
                  <goals>
                     <goal>attached</goal>
                     <!-- goals == mojos -->
                  </goals>
               </execution>
            </executions>
         </plugin>
      </plugins>
   </build>

</project>
